global
  maxconn 4096
  chroot /var/lib/haproxy
  stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
  stats timeout 30s
  log /dev/log local0
  user haproxy
  group haproxy
  daemon

  # Default SSL material locations
  #ca-base /etc/ssl/certs
  #crt-base /etc/ssl/private
  # See: https://ssl-config.mozilla.org/#server=haproxy&server-version=2.0.3&config=intermediate
  #ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
  #ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
  #ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

defaults
  log     global
  mode    http
  balance leastconn
  option  dontlognull
  option  httplog
  option  redispatch
  timeout client      3600s
  timeout server      3600s
  timeout connect        3s
  retries 33

frontend gitlab
  bind *:{{ bastion_gitlab }}
  tcp-request inspect-delay 5s
  default_backend gitlab-ep

frontend gitlab-ssh
  bind *:{{ bastion_git }}
  mode tcp
  default_backend gitlab-ssh

frontend influxdb
  bind *:{{ bastion_influxdb }}
  tcp-request inspect-delay 5s
  default_backend influxdb-ep

frontend grafana
  bind *:{{ bastion_grafana }}
  tcp-request inspect-delay 5s
  default_backend grafana-ep

frontend kubeapi_stats
  bind *:{{ bastion_haproxy_kube }}
  tcp-request inspect-delay 5s
  default_backend kubeapi-ep

listen proxy_stats
  bind *:{{ bastion_haproxy_main }}
  stats enable
  stats uri /
  stats auth root:haproxy

backend gitlab-ep
  server gitlab-web {{ hostvars[groups.gitlab | random].ansible_host }}:{{ hostvars[groups.gitlab | random].gitlab_port }} check

backend gitlab-ssh
  mode tcp
  server gitlab-git {{ hostvars[groups.gitlab | random].ansible_host }}:{{ hostvars[groups.gitlab | random].gitlab_ssh_port }} check

backend influxdb-ep
  server influxdb-web {{ hostvars[groups.influxdb | random].ansible_host }}:{{ hostvars[groups.influxdb | random].influxdb_port }} check

backend grafana-ep
  server grafana-web {{ hostvars[groups.grafana | random].ansible_host }}:{{ hostvars[groups.grafana | random].grafana_port }} check

backend kubeapi-ep
  server kubeapi-web {{ hostvars[groups.kube_proxy.0].ansible_host }}:80 check
